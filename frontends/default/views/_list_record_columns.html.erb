<% if active_scaffold_config.one_column_list %>
<td class="<%#= column_class(column, column_value) %>" >
<% end -%>
    <% active_scaffold_tools_list_columns.each do |column| %>
      <% authorized = record.authorized_for?(:action => :read, :column => column.name) -%>
      <% column_value = authorized ? get_column_value(record, column) : active_scaffold_config.list.empty_field_text -%>
      <% unless active_scaffold_config.one_column_list %>  
  <td class="<%= column_class(column, column_value) %>" >
    <% end -%>
    <%= authorized ? render_list_column(column_value, column, record) : column_value %>
    <% if active_scaffold_config.one_column_list %>
  &nbsp;
    <% else %>
  </td>
  <% end -%>
<% end -%>
<% if active_scaffold_config.one_column_list %>
</td>
<% end -%>
