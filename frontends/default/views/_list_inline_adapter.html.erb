<%= update_page_tag { |page| page.replace_html active_scaffold_messages_id, :partial => 'messages' } %>
<% # AST nested_id, allows us to remove a nested scaffold programmatically, transfer participant to another workshop %>
<tr class="inline-adapter" id="<%= nested_id  %>">
  <td colspan="99" class="inline-adapter-cell">
    <div class="<%= "#{params[:action]}-view" if params[:action] %> <%= "#{params[:associations] ? params[:associations] : params[:controller]}-view" %> view">
      <!-- AST left-handed -->
      <a href="" class="inline-adapter-close" title="<%= as_(:close) %>"><%= as_(:close) unless active_scaffold_config.left_handed %></a>
      <%= payload -%>
    </div>
  </td>
</tr>
